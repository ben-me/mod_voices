{
  "name": "mod-voices",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:precommit": "lint-staged",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint && eslint .",
    "lint:fix": "eslint --max-warnings=0 --fix",
    "format": "prettier --write .",
    "format:file": "prettier --write",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "db:start": "docker compose up",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "pnpm run lint:fix",
      "pnpm run format:file"
    ],
    "*.{json,md,mdx,css,scss,html,yml,yaml}": "pnpm run format:file"
  },
  "dependencies": {
    "better-auth": "^1.4.16",
    "drizzle-valibot": "^0.4.2",
    "eslint-config-prettier": "^10.1.8",
    "pg": "^8.17.1",
    "runed": "^0.35.1",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.2",
    "@inlang/paraglide-js": "^2.9.0",
    "@playwright/test": "^1.57.0",
    "@sveltejs/adapter-auto": "^6.1.1",
    "@sveltejs/kit": "^2.50.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/vite": "^4.1.18",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^22.19.7",
    "@types/pg": "^8.16.0",
    "@vitest/browser": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.47.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "typescript-svelte-plugin": "^0.3.50",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  }
}
