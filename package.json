{
  "name": "mod-voices",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:precommit": "lint-staged",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint && eslint .",
    "lint:fix": "eslint --max-warnings=0 --fix",
    "format": "prettier --write .",
    "format:file": "prettier --write",
    "test:unit": "vitest",
    "test": "npm run test:unit -- --run && npm run test:e2e",
    "test:e2e": "playwright test",
    "db:start": "docker compose up",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "pnpm run lint:fix",
      "pnpm run format:file"
    ],
    "*.{json,md,mdx,css,scss,html,yml,yaml}": "pnpm run format:file"
  },
  "dependencies": {
    "better-auth": "^1.4.18",
    "drizzle-orm": "1.0.0-beta.13-f728631",
    "drizzle-valibot": "^0.4.2",
    "pg": "^8.18.0",
    "runed": "^0.37.1",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@csstools/postcss-global-data": "^4.0.0",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "@inlang/paraglide-js": "^2.12.0",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-auto": "^7.0.1",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@vitest/browser": "^4.0.18",
    "drizzle-kit": "1.0.0-beta.13-f728631",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-custom-media": "^12.0.0",
    "postcss-html": "^1.8.1",
    "postcss-import": "^16.1.1",
    "postcss-load-config": "^6.0.1",
    "postcss-preset-env": "^11.1.3",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "stylelint": "^17.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^40.0.0",
    "svelte": "^5.51.2",
    "svelte-check": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "typescript-svelte-plugin": "^0.3.50",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vitest-browser-svelte": "^2.0.2"
  }
}
